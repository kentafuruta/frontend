{
  "name": "pug-sass-babel",
  "version": "1.0.0",
  "description": "npm-scripts, sass, babel build tool.",
  "main": "index.js",
  "scripts": {
    "start": "npm run watch",
    "install": "mkdirp dist/js && npm-run-all -p build:*",
    "build": "npm-run-all -s clean -p build:*",
    "build:html": "pug -o dist src/pug/ --pretty",
    "build:js": "babel ./src/js/app.js -o dist/js/bundle.js --source-maps",
    "build:css": "npm run sass && npm run autoprefixer",
    "build:image": "gulp image",
    "build:sprite": "gulp sprite",
    "watch": "npm-run-all -p watch:* server",
    "watch:html": "pug -w -o dist src/pug/ --pretty",
    "watch:js": "babel -w ./src/js/app.js -o dist/js/bundle.js --source-maps",
    "watch:css": "npm run sass:watch && autoprefixer:watch",
    "watch:gulp": "gulp watch",
    "clean": "rimraf dist",
    "autoprefixer": "postcss -u autoprefixer --autoprefixer.browsers \"> 5%, ie 8\" -o dist/css/style.css dist/css/style.css",
    "autoprefixer:watch": "postcss -w -u autoprefixer --autoprefixer.browsers \"> 5%, ie 8\" -o dist/css/style.css dist/css/style.css",
    "sass": "node-sass --source-map true --output-style expanded --indent-type space --indent-width 2 -o dist/css src/sass",
    "sass:watch": "node-sass -w --source-map true --output-style expanded --indent-type space --indent-width 2 -o dist/css src/sass",
    "server": "browser-sync start -s ./ -f dist/* --startPath dist/"
  },
  "keywords": [
    "frontend",
    "npm-scripts",
    "sass",
    "babel"
  ],
  "author": "Keiji Miyake",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.5.1",
    "babel-cli": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "browser-sync": "^2.17.3",
    "del": "^2.2.2",
    "gulp": "^3.9.1",
    "gulp-consolidate": "^0.2.0",
    "gulp-iconfont": "^8.0.1",
    "gulp-imagemin": "^3.0.3",
    "gulp-notify": "^2.2.0",
    "gulp-plumber": "^1.1.0",
    "gulp-rename": "^1.2.2",
    "gulp.spritesmith": "^6.2.1",
    "imagemin": "^5.2.2",
    "imagemin-cli": "^3.0.0",
    "imagemin-mozjpeg": "^6.0.0",
    "imagemin-pngquant": "^5.0.0",
    "jquery": "^3.1.1",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.10.1",
    "npm-run-all": "^3.1.1",
    "onchange": "^3.0.2",
    "postcss-cli": "^2.6.0",
    "pug": "^2.0.0-beta6",
    "pug-cli": "^1.0.0-alpha6",
    "require-dir": "^0.3.1",
    "rimraf": "^2.5.4"
  },
  "dependencies": {
    "jquery": "^3.1.1"
  }
}
